public class DealBeginningCards
{
  public static void dealHoleCards() {
    Random random = new Random;
    
    for(int i = 0; i < 2; i++) {
      cardNumber = Random.nextInt(52);
      playerOneHoleCards[i] = deck[cardNumber];
    }
    
    for(int i = 0; i < 2; i++) {
      cardNumber = Random.nextInt(52);
      playerTwoHoleCards[i] = deck[cardNumber];
    }
    
    System.out.print("Here are Player One's Hole Cards:"); // somehow only show this to one player
    for(int i = 0; i < 2; i++) {
      System.out.print(playerOneHoleCards[i] + "     ");
    }
    
    System.out.print("Here are Player Two's Hole Cards:"); 
    for(int i = 0; i < 2; i++) {
      System.out.print(playerTwoHoleCards[i] + "     ");
    }
  }
}
      
